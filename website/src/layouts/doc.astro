        </a>
        <Nav />
        <!-- <a class="text-teal-500" href="/">go to REPL</a> -->
      </div>
    </nav>
    <div class="grow overflow-auto">
      <main class="m-auto max-w-2xl px-4">
        <article
          class="py-8 prose prose-invert prose-stone prose-headings:text-teal-100 font-mono"
        >
          <!-- </nav> -->
          <slot />
        </article>
      </main>
    </div>
    <script>
      const navs = document.querySelectorAll(".nav-select");
      navs.forEach((nav) => {
        nav.addEventListener("change", (e: any) => {
          window.location.href = e.target.value;
        });
      });
    </script>
  </body>
</html>
